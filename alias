# These commands run Ansible in Docker with the PWD mapped to /docker. 
# Need single quotes, otherwise pwd runs when alias is created instead of at runtime.
alias ansible='docker run -v $(pwd):/docker -w /docker --rm -it mingfang/ansible ansible'
alias ansible-galaxy='docker run -v $(pwd):/docker -w /docker --rm -it mingfang/ansible ansible-galaxy'
alias ansible-playbook='docker run --net=host -v $(pwd):/docker -w /docker --rm -it mingfang/ansible ansible-playbook'
alias ansible-vault='docker run -v $(pwd):/docker -w /docker --rm -it mingfang/ansible ansible-vault'
